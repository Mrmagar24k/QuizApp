<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#3F4243"
    android:orientation="vertical" >

    <!-- Question 1 -->

    <TextView

        style="@style/questionStyle"
        android:text="1. What is a famous pilgrimage site in Nepal Himalayas, both for Buddhist and Hindu pilgrims?"/>


    <RadioGroup
        android:id="@+id/num_one_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/muktinath_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Muktinath" />
        <RadioButton
            android:id="@+id/amarnath_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Amarnath" />
        <RadioButton
            android:id="@+id/badrinath_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Badrinath" />
        <RadioButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Sonamnath" />

    </RadioGroup>

    <!-- Question 2 -->

    <TextView

        style="@style/questionStyle"
        android:text="2. What's the name of the people living in the valleys of Khumbu, Eastern Nepal, who provide most of the porters for trekkers?"
        />

    <RadioGroup
        android:id="@+id/num_two_radio_group"
        style="@style/radioStyle">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Magar" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Gurung" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Tamang" />

        <RadioButton
            android:id="@+id/sherpa_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Sherpa" />

    </RadioGroup>

    <!-- Question 3 -->
    <TextView

        style="@style/questionStyle"
        android:text="3. What is the other name for the abominable snowman living in the Nepali mountains and, in general, in the Himalayas ranges?"
        />
    <RadioGroup
        android:id="@+id/num_three_radio_group"

        style="@style/radioStyle"
        tools:ignore="DuplicateIds">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Sbowm" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text=" Ooch Ka Ty" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Snowman" />
        <RadioButton
            android:id="@+id/yeti_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Yeti" />

    </RadioGroup>

    <!-- Question 4 -->
    <TextView

        style="@style/questionStyle"
        android:text="4. What is the name of the famous street in Kathmandu, where the first hippies lived in the 60's and 70's?"
        />
    <RadioGroup
        android:id="@+id/num_four_radio_group"

        style="@style/radioStyle">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Mai Street" />
        <RadioButton
            android:id="@+id/freak_street_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Freak Street" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Hippy Lane" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#F9F9FA"
            android:text="Jawala" />

    </RadioGroup>
    <!-- Question 5 -->
    <TextView

        style="@style/questionStyle"
        android:text="5. Who became king of Nepal in 2001?"
        />
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:hint="Please enter your answer"
        android:textColor="#DEE4E6"
        android:textColorHint="#F3FCFF"
        android:inputType="text"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_orange_dark"
        android:text="Submit" />

</LinearLayout>

</ScrollView>